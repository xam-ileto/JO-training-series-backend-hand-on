<!DOCTYPE html>
<html>
  <%- include('./partials/head.ejs') %>
  <body>
    <%- include('./partials/header.ejs') %>
    <div class="position-relative height-100">
      <div
        class="bg-white position-absolute center p-5 border border-primary rounded text-left lr-center"
      >
        <%toDoList.forEach(item => {%> <% if (item.done) {%>
        <!-- if item is done, prints a check -->
        <p class="d-inline mr-5 list-item">✔</p>
        <%} else {%>
        <!-- if item is unfinished, prints an X -->
        <p class="d-inline mr-5 list-item">✖</p>
        <% }%>
        <h3 class="d-inline"><%=item.activity%></h3>
        <!-- list will be a clickable button that modifies the done property -->
        <br />
        <%})%>
      </div>
    </div>
    <script
      src="https://code.jquery.com/jquery-3.6.0.js"
      integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
      crossorigin="anonymous"
    ></script>
    <script src="./logic.js" async defer></script>
  </body>
</html>
